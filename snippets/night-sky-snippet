// JS

const getRandomIntInclusive = function(min, max) {
  min = Math.ceil(min);
  max = Math.floor(max);
  return Math.floor(Math.random() * (max - min + 1)) + min;
};

const createStarWithClassName = function(className) {
  let starElement = document.createElement('div');
  starElement.classList.add(className);

  let starSize = getRandomIntInclusive(1, 3);
  let randomStarPositionX = getRandomIntInclusive(1, 1000) / 10;
  let randomStarPositionY = getRandomIntInclusive(1, 1000) / 10;

  starElement.style.width = `${starSize}px`;
  starElement.style.height = `${starSize}px`;
  starElement.style.top = `${randomStarPositionY}vh`;
  starElement.style.left = `${randomStarPositionX}vw`;

  return starElement;
}

const generateStars = function(){
  const nightSkyElement = document.querySelector('.scene--1 .scene__background');
  for(let i = 0; i < 1000; i++){
    let starElement = createStarWithClassName('star');
    nightSkyElement.appendChild(starElement);
  }
  let starElement = createStarWithClassName('special-star');
  nightSkyElement.appendChild(starElement);
};


document.addEventListener('DOMContentLoaded', function(){
  generateStars();
});

// CSS

:root {
    --night-sky-colour: black;
    --star-colour: rgba(255, 255, 255, 0.95);
    --special-star-colour: rgba(255, 136, 179, 0.5);
}

.night-sky {
}

.star, .special-star {
    position: absolute;
    display: block;
    background-color: var(--star-colour);
    border-radius: 100%;
}
.special-star {
    background: var(--special-star-colour);
    /*background: var(--special-star-colour), radial-gradient(5px at center, red 34%, transparent 34%);*/
}
